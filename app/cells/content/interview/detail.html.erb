    <div class="g-width-660 mt60 sp-mt40">
      <h1 class="title-24 lh-1-46 mb30"><%= post_title %></h1>

      <img src="<%= thumbnail %>" alt="プロフィール">

      <div class="box-type02 mt60 sp-mt20">
        <p class="mb20"><strong>プロフィール</strong></p>

        <p><%= profile %></p>
      </div>

      <div class="wp-content wp-interview-post-content mt60 sp-mt25">
        <%= post_content %>
      </div>

      <p class="mt20">
        <a href="#">
          <img src="<%= asset_path('corporate/contact_banner.jpg') %>" alt="プロ人材をお探しの法人様はコチラ">
        </a>
      </p>

      <div class="btn-flex-wrapper jc-space-between mt40">
        <a class="btn btn-type03 bg-facebook c-white w-206 sp-btn-social ls-neg-1-3"
          href="<%= facebook_share_url %>" rel="nofollow
          noopener" target="_blank">
          <i class="i-fb"></i>
          シェアする
        </a>
        <a class="btn btn-type03 bg-twitter c-white w-206 sp-btn-social  ls-neg-1-3"
          href="<%= twitter_share_url %>" rel="nofollow noopener" target="_blank">
          <i class="i-twitter"></i>
          ツイートする
        </a>
        <a class="btn btn-type03 bg-buzz c-white w-206 sp-btn-social  ls-neg-1-3"
          href="<%= hatena_share_url %>" rel="nofollow
          noopener" target="_blank">
          <i class="i-buzz"></i>
          はてブする
        </a>
      </div>
    </div>

    <div class="intview-pagi mt60 sp-mt40">
      <%= prev_link %>

      <div class="intview-pagi-item center">
        <p><%= link_to '記事一覧へ戻る', corp_interviews_path %></p>
      </div>

      <%= next_link %>
    </div>
