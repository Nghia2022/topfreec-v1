    <div class="sec-theme-03">
      <div class="sec sec-full">
        <%= form_with url: projects_path, method: :get, local: true, class: 'form-content top-search-box' do |f| %>
          <div class="form-row">
            <label class="label-input">
              <%= text_field_tag :keyword, params[:keyword], placeholder: 'Tìm kiếm việc làm, công ty', class: 'f-input keyword i-search' %>
            </label>
            <label class="label-select">
              <%= f.collection_select 'categories[]', Project::ExperienceCategory.all, :value, :value, { include_blank: 'Tất cả kỹ năng', selected: params[:categories] }, class: 'f-input select', id: 'categories' %>
            </label>
            <label class="label-select">
              <%= f.select 'work_locations[]', DesiredCondition.work_location1.options, { include_blank: 'Tất cả địa điểm', selected: params[:prefecture_id] }, class: 'f-input select', id: 'work_locations' %>
            </label>
            <label class="label-select">
              <%= f.collection_select 'compensation_ids[]', Compensation.all, :id, :title, { include_blank: 'Tất cả mức lương', selected: params[:compensation_ids] }, class: 'f-input select', id: 'compensation_ids' %>
            </label>
            <button class="btn btn-theme-02 bs-search">
              <i class="bicon-search-2"></i>
              Tìm kiếm
            </button>
          </div>
        <% end %>
      </div>
    </div>
