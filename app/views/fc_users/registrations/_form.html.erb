          <%= render 'error_messages', resource: %>
          <div class="general-table form-table full-sp">
            <table>
              <tr>
                <th>名前 <span class="label label-required">必須</span></th>
                <td>
                  <span class="form-sub-ttl">漢字</span>
                  <div class="form-row">
                    <label class="label-input form-half">
                      <%= f.text_field :last_name, placeholder: '姓', autofocus: true, required: true %>
                    </label>
                    <label class="label-input form-half">
                      <%= f.text_field :first_name, placeholder: '名', required: true %>
                    </label>
                  </div>
                  <span class="form-sub-ttl">フリガナ</span>
                  <div class="form-row">
                    <label class="label-input form-half">
                      <%= f.text_field :last_name_kana, placeholder: 'セイ', autofocus: true, required: true %>
                    </label>
                    <label class="label-input form-half">
                      <%= f.text_field :first_name_kana, placeholder: 'メイ', required: true %>
                    </label>
                  </div>
                </td>
              </tr>
              <tr>
                <th>携帯番号 <span class="label label-required">必須</span>
                  <div class="s-mt-10 s-fs-12 s-lh-14">
                    ※半角数字 / ハイフン(-)なし<br>※携帯電話がない場合は固定電話を入力ください
                  </div>
                </th>
                <td>
                  <div class="form-row">
                    <label class="label-input form-full">
                      <%= f.text_field :phone, placeholder: '09012345678', required: true %>
                    </label>
                  </div>
                </td>
              </tr>
              <tr>
                <th>メールアドレス <span class="label label-required">必須</span>
                  <div class="s-mt-10 s-fs-12 s-lh-14">
                    ※半角英数字
                  </div>
                </th>
                <td>
                  <div class="form-row">
                    <label class="label-input form-full">
                      <%= f.text_field :email, placeholder: 'Sample@freeconsultant.co.jp' %>
                      <span class="form-notice">※メーリングリストでのご登録はできません。</span>
                    </label>
                  </div>
                </td>
              </tr>
              <tr>
                <th>勤務可能地域</th>
                <td>
                  <span class="form-sub-ttl">第一希望 <span class="label label-required">必須</span></span>
                  <div class="form-row">
                    <label class="label-select form-full">
                      <%= f.select :work_location1, Fc::UserRegistration::FcUser.work_location1.values, { placeholder: true, include_blank: '選択してください' } %>
                    </label>
                  </div>
                  <span class="form-sub-ttl">第二希望 <span class="label label-normal">任意</span></span>
                  <div class="form-row">
                    <label class="label-select form-full">
                      <%= f.select :work_location2, Fc::UserRegistration::FcUser.work_location2.values, { placeholder: true, include_blank: '選択してください' }, data: { dependent: 'fc_user_work_location1' } %>
                    </label>
                  </div>
                  <span class="form-sub-ttl">第三希望 <span class="label label-normal">任意</span></span>
                  <div class="form-row">
                    <label class="label-select form-full">
                      <%= f.select :work_location3, Fc::UserRegistration::FcUser.work_location3.values, { placeholder: true, include_blank: '選択してください' }, data: { dependent: 'fc_user_work_location2' } %>
                    </label>
                  </div>
                </td>
              </tr>
            </table>
          </div>
