              <p class="fs-14 noto-m mt15">市区町村・番地</p>
              <%= f.text_field :city, class: 'f-input mt10' %>
              <p class="fs-14 noto-m mt15">建物名</p>
              <%= f.text_field :building, class: 'f-input mt10' %>
            </td>
          </tr>
        </table>
