              <div class="form-group">
                <div class="form-head">
                  <span class="form-ttl">住所</span><span class="label label-required">必須</span>
                </div>
                <div class="form-row top">
                  <label class="label-input form-half">
                    <span class="form-sub-ttl">郵便番号</span>
                    <%= f.text_field :zipcode, class: 'f-input mt10', placeholder: '1234567' %>
                  </label>
                  <label>
                    　<a href="https://www.post.japanpost.jp/zipcode/" target="_blank" rel="noopener" class="txt-link s-fs-12 s-pt-10">郵便番号を調べる<br class="s-sp">(日本郵便)</a>
                  </label>
                </div>
                <div class="form-row">
                  <label class="label-select form-long">
                    <span class="form-sub-ttl">都道府県</span>
                    <%= f.collection_select :prefecture, JpPrefecture::Prefecture.all, :name, :name, { prompt: '選択してください' } %>
                  </label>
                </div>
                <div class="form-row">
                  <label class="label-input form-full">
                    <span class="form-sub-ttl">市区郡</span>
                    <%= f.text_field :city %>
                  </label>
                </div>
                <div class="form-row">
                  <label class="label-input form-full">
                    <span class="form-sub-ttl">町名以降のご住所(町村名・番地・建物名)</span>
                    <%= f.text_field :building %>
                  </label>
                </div>
              </div>
              <div class="form-group">
                <div class="form-head">
                  <span class="form-ttl">電話番号</span>
                </div>
                <div class="form-row">
                  <label class="label-input form-full">
                    <span class="form-sub-ttl">携帯番号 <span class="label label-required">必須</span></span>
                    <%= f.text_field :phone, placeholder: '09012345678' %>
                  </label>
                </div>
                <div class="form-row">
                  <label class="label-input form-full">
                    <span class="form-sub-ttl">固定電話</span>
                    <%= f.text_field :phone2, placeholder: '0311112222' %>
                  </label>
                </div>
              </div>
